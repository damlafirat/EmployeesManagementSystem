
@{
    ViewBag.Title = "Index";
}

@model List<EmployeesManagementSystem_MVC.Employees>

<h2>Employees List</h2>

<a class="btn btn-default" href="/Home/Add" role="button">Add new Employee</a>
<br />
<table class="table">
    <thead>
        <tr>
            <td>ID</td>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Title</td>
            <td>Title of Courtesy</td>
            <td>City</td>
            <td>Transactiion</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmployeeID</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Title</td>
                <td>@item.TitleOfCourtesy</td>
                <td>@item.City</td>
                <td><a href="/Home/Edit/@item.EmployeeID">Edit</a> - <a href="/Home/Delete/@item.EmployeeID" onclick="return confirm('Do you want to delete this Employee?')">Delete</a></td>
            </tr>
        }
    </tbody>
</table>